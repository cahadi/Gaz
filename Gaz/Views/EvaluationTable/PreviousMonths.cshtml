                                                            {
                                                                <a>@em.Mark.YesNo</a>
                                                            }
                                                            else
                                                            {
                                                                <a>Нет</a>                                                                
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @foreach (var em in Model.EstimationsMarks12)
                                                        {
                                                            @if(em.Mark.YesNo != null || em.Mark.YesNo != "")
                                                            {
                                                                <a>@em.Mark.YesNo</a>
                                                            }
                                                            else
                                                            {
                                                                <a>Нет</a>                                                                
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @foreach (var sc in Model.Scores.Where(s => s.UserId == user.Id))
                                                        {
                                                            <a>@sc.MonthScore</a>
                                                        }
                                                        @if (Model.Scores.Count() == 0)
                                                        {
                                                            <a>0</a>
                                                        }
                                                    </td>
                                                    <td>
                                                        @foreach (var sc in Model.Scores.Where(s => s.UserId == user.Id))
                                                        {
                                                            <a>@sc.FinalScore</a>
                                                        }
                                                        @if (Model.Scores.Count() == 0)
                                                        {
                                                            <a>0</a>
                                                        }
                                                    </td>
                                                }
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    @await Html.PartialAsync("JsTablePartial")
</body>

</html>