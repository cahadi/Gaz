                                                            {
                                                                <a>Нет</a>                                                                
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @foreach (var em in Model.EstimationsMarks8)
                                                        {
                                                            @if(em.Mark.YesNo != null || em.Mark.YesNo != "")
                                                            {
                                                                <a>@em.Mark.YesNo</a>
                                                            }
                                                            else
                                                            {
                                                                <a>Нет</a>                                                                
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @foreach (var em in Model.EstimationsMarks9)
                                                        {
                                                            @if(em.Mark.YesNo != null || em.Mark.YesNo != "")
                                                            {
                                                                <a>@em.Mark.YesNo</a>
                                                            }
                                                            else
                                                            {
