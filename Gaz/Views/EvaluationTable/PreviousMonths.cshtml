@using Gaz.Domain.Entities;
@using Gaz.Models;
@model SidebarModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    @await Html.PartialAsync("MetaPartial")
    @await Html.PartialAsync("CssTablePartial")
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        @await Html.PartialAsync("SidebarPartial", Model)
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                @if (Model.Side == true)
                {
                    <div class="container-fluid">
                        <div class="card shadow mb-4">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <form class="user" asp-area="" asp-controller="EvaluationTable"
                                      asp-action="ApparatSend" method="post">
                                        <input type="hidden" name="User.Id" value="@Model.User.Id">
                                        @if (Model.Admin == true)
                                        {
                                            <input type="email" id="input-email" name="Email">

                                            <br>

                                            <br>
                                        }
                                        <select id="email" name="Email">
                                            <option value=""></option>
                                            @foreach (var user in Model.AllUsers)
                                            {
                                                <option value="@user.Email">@user.Email</option>
                                            }
                                        </select><br><br>
                                        <input class="btn btn-primary btn-user btn-block" type="submit" value="Отправить"><br><br>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="container-fluid">
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="table-responsive">
                                <form class="user" asp-area="" asp-controller="EvalutionTable"
                                      asp-action="Apparat" asp-route-userId="@Model.User.Id"
                                      asp-route-param="@Model.Name">
                                    <input class="btn btn-primary btn-user btn-block" type="submit" value="@Model.CurrentMonth" />
                                </form>
                                <form class="user" asp-area="" asp-controller="EvalutionTable"
                                      asp-action="PreviousMonths" asp-route-userId="@Model.User.Id"
                                      asp-route-param="@Model.Name" asp-route-month="@Model.PM">
                                    <input class="btn btn-primary btn-user btn-block" type="submit" value="@Model.PreviousMonth" />
                                </form>
                                <form class="user" asp-area="" asp-controller="EvalutionTable"
                                      asp-action="PreviousMonths" asp-route-userId="@Model.User.Id"
                                      asp-route-param="@Model.Name" asp-route-month="@Model.TMA">
                                    <input class="btn btn-primary btn-user btn-block" type="submit" value="@Model.TwoMonthsAgo" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <form class="user" asp-area="" asp-controller="EvaluationTable"
                      asp-action="Save" method="post">
                    <input type="hidden" name="Name" value="@Model.Name" />
                    <div class="container-fluid">
                        <div class="card shadow mb-4">
                            <div class="card-body">
                                <input class="btn btn-primary btn-user btn-block" type="submit" value="Сохранить">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <tbody>
                                            <tr>
                                                <td rowspan="3">ОЦЕНИВАЕМЫЕ</td>
                                                <td rowspan="3">ПОЯСНЕНИЯ</td>
                                                <td colspan="12">НАПРАВЛЕНИЕ ДЕЯТЕЛЬНОСТИ</td>
                                                <td colspan="2" rowspan="2">БАЛЛЫ</td>
                                            </tr>
                                            <tr>
                                                <td colspan="6">Производственное</td>
                                                <td colspan="2">Дополнительное производственное</td>
                                                <td colspan="3">Социально-культурное</td>
                                                <td>Доп. социокульт.</td>
                                            </tr>
                                            <tr>
                                                <td>Дисциплина организации труда и качество выполняемых работ</td>
                                                <td>Заполнение формы индентификации опасности в системе "СТОП-РИСК"</td>
                                                <td>Рационализаторская деятельность</td>
                                                <td>Внедрение предложений по системе "Бережливое производство"</td>
                                                <td>Оценка руководителя (корректирующий коэффициент)</td>
                                                <td>Положительный опыт, Оценка филиала</td>
                                                <td>Наставничество</td>
                                                <td>Участие в конкурсе профмастерства, Семинарах в качестве докладчика</td>
                                                <td>Экология (участие в экологических акциях)</td>
                                                <td>Спорт (участие в спортивных мероприятиях)</td>
                                                <td>Культурно-массовые мероприятия</td>
                                                <td>Благотворительные акции</td>
                                                <td>За текущий месяц</td>
                                                <td>Суммарный годовой (январь - декабрь)</td>
                                            </tr>
                                            <tr>
                                                @foreach (User user in Model.Users)
                                                {
                                                    <input type="hidden" name="UserId" value="@Model.User.Id">
                                                    <input type="hidden" name="EditUserId" value="@user.Id" />
                                                    <td>@user.Fio</td>
                                                    <td name="Explanation1">
                                                        @if (Model.Dis == true || Model.User.Id == user.Id)
                                                        {
                                                            @if (Model.Explanations.Where(z => z.UserId == user.Id).Count() == 0)
                                                            {
                                                                <input type="text" id="explanation" name="Explanation" value="" required>

                                                                <br>

                                                                <br>
                                                            }
                                                            @foreach (var ex in Model.Explanations.Where(z => z.UserId == user.Id))
                                                            {
                                                                <input type="text" id="explanation" name="Explanation" value="@ex.Explanation1" required>

                                                                <br>

                                                                <br>
                                                            }
                                                        }
                                                        @if (Model.User.Id != user.Id)
                                                        {
                                                            @foreach (var ex in Model.Explanations.Where(z => z.UserId == user.Id))
                                                            {
                                                                <a>@ex.Explanation1</a>
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @foreach (var em in Model.EstimationsMarks1)
                                                        {
                                                            @if(em.Mark.YesNo != null || em.Mark.YesNo != "")
                                                            {
                                                                <a>@em.Mark.YesNo</a>
                                                            }
                                                            else
                                                            {
                                                                <a>Нет</a>                                                                
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @foreach (var em in Model.EstimationsMarks2)
                                                        {
                                                            @if (em.Mark.BigMark != null || em.Mark.BigMark != 0)
                                                            {
                                                                <a>@em.Mark.BigMark</a>
                                                            }
                                                            else
                                                            {
                                                                <a>0</a>
                                                            }
                                                        }
                                                    </td>
                                                    <td>
