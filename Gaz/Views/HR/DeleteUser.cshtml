@using Gaz.Models;
@model SidebarModel
@{
    Layout = "_Layout";
}
<input type="hidden" name="User.Id" value="@Model.User.Id" />
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        @await Html.PartialAsync("SidebarPartial", Model)
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="table-responsive">
                                <form class="user" asp-area="" asp-controller="HR"
                                      asp-action="DeleteUser" method="post">
                                        <input type="hidden" name="User.Id" value="@Model.User.Id">
                                        <label>Выберите</label>
                                        <select id="user" name="EditUserId">
                                            <option value=""></option>
                                            @foreach (var user in Model.AllUsers)
                                            {
                                                <option value="@user.Id">@user.Fio</option>
                                            }
                                        </select><br><br>
                                        <input class="btn btn-primary btn-user btn-block" type="submit" value="Удалить" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    @await Html.PartialAsync("JsTablePartial")
</body>
